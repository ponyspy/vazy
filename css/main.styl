html
body
	margin 0
	padding 0
	height 100%


.slider_outer
	z-index 0
	position absolute
	width 100%
	height 100%
	.swiper-container
		width 100%
		height 100%
		.swiper-slide
			position relative
			filter: brightness(93%)
			.slide_image
				width 100%
				padding-bottom calc(100% - 100px)
				background-position center
				background-size contain
				background-repeat no-repeat
				position relative
				top 50%
				transform translateY(calc(-50% - 25px))
			&.swiper-slide-active
				filter: none
				.player
					display block
			.player
				display none
				padding-left 15% // 40
				padding-right 15% // 40
				box-sizing border-box
				width 100%
				position absolute
				bottom -55px


.title_block
	position absolute
	width 100%
	height 0
	z-index 1
	.title_inner
		margin 0 auto
		margin-top 40px
		position relative
		max-width 940px
		width 100%
		padding-left 40px
		padding-right 40px
		box-sizing border-box
		.logo
			float left
			font 30pt/32pt 'Time New Roman'
		.social
			margin-top 20px
			float right
			font 12pt/14pt 'Time New Roman'
			a
				display block
				text-align center
				color black
				text-decoration none
				&:hover
					text-decoration underline

@media screen and (max-width: 800px)
	.slide_image
		transform translateY(-60%)!important
		padding-bottom calc(100% - 40px)!important // 70px
	.player
		bottom -125px!important
		padding-left 20px!important
		padding-right 20px!important
	.social
		margin-top 1px!important
		a
			text-align right!important
	.logo
		font 14pt/14pt 'Time New Roman'!important
	.title_inner
		margin-top 20px!important
		padding-left 20px!important
		padding-right 20px!important