.content_block
	position absolute
	width 100%
	height 0
	z-index 1
	.content_inner
		// background-color red
		margin 0 auto
		margin-top 130px
		padding-bottom 100px
		position relative
		max-width 940px
		width 100%
		padding-left 20px
		padding-right 20px
		box-sizing border-box

.exhibitions_block
	display flex
	justify-content space-between
	align-items top
	flex-wrap wrap
	.ex_item
		// background-color red
		flex-basis 230px
		color black
		text-decoration none
		width 190px
		margin-top 90px
		box-sizing border-box
		position relative
		padding-right 20px
		padding-left 20px
		text-align center
		.ex_image
			cursor pointer
			width 100%
			padding-top 100%
			position relative
			overflow hidden
			background-size contain
			background-position center
			background-repeat no-repeat
		.ex_title
			margin-top 20px


@media screen and (max-width: 800px)
	.exhibitions_block
		display block
		.ex_item
			margin-top 20px!important
			padding-right 0!important
			padding-left 0!important
			display block!important
			width 100%!important


